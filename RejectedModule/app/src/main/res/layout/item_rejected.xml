<?xml version="1.0" encoding="utf-8"?>
<!-- UI for single rejected request -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- circle selector -->
        <TextView
            android:id="@+id/tv_selector"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_circle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginRight="12dp"/>

        <!-- info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- users' name -->
            <TextView
                android:id="@+id/tv_item_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crystal Zhang"
                android:textSize="18sp"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-bold"/>

            <!-- users' email -->
            <TextView
                android:id="@+id/tv_item_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crystal@email.com"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginTop="4dp"/>



            <!-- role + status("rejected") -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_item_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Student"
                    android:textSize="14sp"
                    android:textColor="#6B7280"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="#EF4444"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <!-- rejected reason -->
            <TextView
                android:id="@+id/tv_item_reject_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject Reason: Missing ID"
                android:textSize="14sp"
                android:textColor="#EF4444"
                android:layout_marginTop="4dp"/>

            <!-- rejected time（decidedAt） -->
            <TextView
                android:id="@+id/tv_item_decided_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejected At: 2024-05-20 14:30"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp"/>

            <!-- approve button -->
            <Button
                android:id="@+id/btn_item_approve"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Approve"
                android:textSize="14sp"
                android:backgroundTint="#10B981"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>