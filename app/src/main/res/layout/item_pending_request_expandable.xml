<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:strokeColor="#F1E8C6"
    app:strokeWidth="1dp"
    android:backgroundTint="#FFF9DC">

    <!-- animate height changes when we show/hide details -->
    <LinearLayout
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER (always visible) -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center_vertical">

            <!-- avatar dot -->
            <View
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/round_gray_circle"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/txtName"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#0F172A"
                    android:fontFamily="@font/codec_pro_regular"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRole"
                    android:text="Role"
                    android:textSize="13sp"
                    android:textColor="#2563EB"
                    android:fontFamily="@font/codec_pro_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- status pill -->
            <TextView
                android:id="@+id/txtStatus"
                android:text="PENDING"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#0F172A"
                android:fontFamily="@font/codec_pro_regular"
                android:background="@drawable/pill_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- DETAILS (expand/collapse) -->
        <LinearLayout
            android:id="@+id/details"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtEmail"
                android:textSize="14sp"
                android:textColor="#374151"
                android:fontFamily="@font/codec_pro_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtPhone"
                android:textSize="14sp"
                android:textColor="#374151"
                android:fontFamily="@font/codec_pro_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtExtra"
                android:textSize="14sp"
                android:textColor="#374151"
                android:fontFamily="@font/codec_pro_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"/>

            <!-- actions -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApprove"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:text="approve"
                    android:textAllCaps="false"
                    android:fontFamily="@font/codec_pro_regular"
                    android:textColor="#0F172A"
                    app:iconTint="#0F172A"
                    app:cornerRadius="24dp"
                    app:backgroundTint="#FFBF24"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:text="reject"
                    android:textAllCaps="false"
                    android:fontFamily="@font/codec_pro_regular"
                    android:textColor="#0F172A"
                    app:cornerRadius="24dp"
                    app:strokeColor="#0F172A"
                    app:strokeWidth="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
