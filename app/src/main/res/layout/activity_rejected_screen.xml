<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffef0"
    android:padding="24dp"
    tools:context=".RejectedScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/mentora_app_logo"
                android:contentDescription="Mentora Logo" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Rejected"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/codec_pro_regular"
                android:textSize="24sp"
                android:layout_marginBottom="12dp" />

            <!-- Reason -->
            <TextView
                android:id="@+id/tvReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason for rejection will appear here."
                android:textColor="#333333"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Contact message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you believe this was a mistake, please contact administration at:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž 1-800-555-MENTORA"
                android:textColor="#ffbf24"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="24dp" />

            <!-- Return button -->
            <Button
                android:id="@+id/btnBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return to Login"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                android:padding="10dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
