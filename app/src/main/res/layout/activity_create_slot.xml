<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF5">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar">

        <!-- Cute rounded card that holds the full form -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Create Availability Slot"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#1F2937" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Pick a date and a 30-minute time window"
                    android:textSize="13sp"
                    android:textColor="#6B7280" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#F1F5F9" />

                <!-- Date -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#111827" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="Set date"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#ffbf24"
                    app:cornerRadius="26dp"
                    app:icon="@drawable/ic_outline_event_24"
                    app:iconPadding="8dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="YYYY-MM-DD"
                    android:textColor="#6B7280" />

                <!-- Time labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start time"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="End time"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827" />
                </LinearLayout>

                <!-- Time inputs: typed HH:MM + AM/PM dropdown; end time is auto-computed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <!-- Start time container -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:background="#F9FAFB"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etStartTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginEnd="8dp"
                            android:hint="HH:MM"
                            android:inputType="time"
                            android:maxLength="5"
                            android:singleLine="true"
                            android:textColor="#111827"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spStartAmPm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/am_pm_array"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <!-- End time display (auto +30min from start) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickEnd"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Auto-computed"
                        android:textAllCaps="false"
                        android:textColor="#6B7280"
                        android:enabled="false"
                        app:cornerRadius="26dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_outline_access_time_24"
                        app:iconPadding="8dp" />
                </LinearLayout>

                <!-- Chosen time echo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="--:--"
                        android:textColor="#6B7280" />

                    <TextView
                        android:id="@+id/tvEnd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="--:--"
                        android:textColor="#6B7280" />
                </LinearLayout>

                <!-- Manual approval switch -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:cardBackgroundColor="#FAFAFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manual approval"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#111827" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Turn on to review each request before booking"
                                android:textSize="12sp"
                                android:textColor="#6B7280" />
                        </LinearLayout>

                        <!-- same ID used by code -->
                        <Switch
                            android:id="@+id/swAutoApprove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>

    <!-- Sticky bottom bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#111827"
            app:cornerRadius="20dp"
            app:strokeColor="#E5E7EB"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_outline_arrow_back_24"
            app:iconPadding="6dp" />

        <Space
            android:layout_width="14dp"
            android:layout_height="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Create slot"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#ffbf24"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_outline_add_24"
            app:iconPadding="6dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
