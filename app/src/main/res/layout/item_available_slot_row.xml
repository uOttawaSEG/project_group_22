<?xml version="1.0" encoding="utf-8"?>
<!--
   Layout: item_slot_search_result.xml (example name)

Purpose:

- Represents a single tutor time slot in the Student "Search / Results" list.

- Used inside a RecyclerView/ListView to show:

• Date & time of the session

• Tutor name

• Tutor rating (average + number of reviews)

• Approval mode (e.g., Auto-approve / Manual)

• Tutor degree and main courses

• A button to request/book this session

Notes:

- Card is white with subtle elevation and rounded corners.

- In the adapter TextViews are linked using their IDs (tvWhen, tvTutorName, etc.).

- btnRequest is wired in the adapter/fragment to open a booking/request flow.
-->

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Date & Time -->
        <TextView
            android:id="@+id/tvWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-11-21 • 11:30–12:00"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#111827" />

        <!-- Tutor Name -->
        <TextView
            android:id="@+id/tvTutorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="#374151"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5 ★ (12)"
            android:textColor="#F59E0B"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Approval Mode -->
        <TextView
            android:id="@+id/tvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-approve"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTutorDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BSc Computer Science"
            android:textColor="#4B5563"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTutorCourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSI 2110, CEG 2136"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp" />

        <!-- Request Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequest"
            android:backgroundTint="#FFBF24"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_session"
            app:cornerRadius="8dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
