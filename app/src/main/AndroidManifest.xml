<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed for Firebase/Auth/Firestore network calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- AndroidManifest.xml (top level, outside <application>) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mentora_app_logo"
        android:label="Mentora"
        android:supportsRtl="true"
        android:theme="@style/Theme.SEG2105_Project_1_Tutor_Registration_Form">

        <!-- 1) Launcher: Splash first -->
        <activity
            android:name=".auth.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2) Main login screen (opened from Splash) -->
        <activity
            android:name=".auth.MainActivity"
            android:exported="false" />

        <!-- 3) Registration screens -->
        <activity
            android:name=".auth.TutorRegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".auth.StudentRegistrationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".auth.AdminRegistrationActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- 4) Post-auth landing -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />

        <!-- Admin home (cards: Inbox / Approved / Rejected / Log out) -->
        <activity
            android:name=".ui.admin.AdminHomeActivity"
            android:exported="false"
            android:label="@string/admin_home_title" />

        <activity
            android:name=".ui.admin.AdminInboxActivity"
            android:exported="false"
            android:label="@string/inbox" />

        <activity
            android:name=".ui.admin.RequestDetailActivity"
            android:exported="false" />

    </application>

</manifest>
